<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Clock" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Clock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorPrimaryVariant">@color/ios_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/ios_gray</item>
        <item name="colorSecondaryVariant">@color/ios_gray_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/ios_blue</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/ios_background</item>
        <item name="android:colorBackground">@color/ios_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/ios_text_primary</item>
        <item name="android:textColorSecondary">@color/ios_text_secondary</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/ios_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/ios_background</item>
        <item name="itemIconTint">@color/ios_bottom_nav_icon</item>
        <item name="itemTextColor">@color/ios_bottom_nav_text</item>
    </style>
</resources>